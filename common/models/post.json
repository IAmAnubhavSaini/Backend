{
  "name": "Post",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
		"id": {
      "type": "number",
			"id": true,
      "required": true
    },
		"slug": {
			"type": "string",
      "required": true
		},
    "name": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "new"
    },
    "description": {
      "type": "string"
    },
    "authorId": {
      "type": "number"
    },
    "tagIds": {
      "type": [
        "string"
      ]
    },
    "created": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    },
    "archived": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
		"tags": {
      "type": "referencesMany",
      "model": "Tag",
      "property": "tagIds",
      "options": {
        "validate": true,
        "forceId": false
      }
    },
		"author": {
      "type": "belongsTo",
      "model": "Author"
    }
	},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
