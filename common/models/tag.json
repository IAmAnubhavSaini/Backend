{
  "name": "Tag",
  "base": "PersistedModel",
  "strict": "throw",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "persistUndefinedAsNull": true,
  "mixins": {
    "Paginate": {
      "config": {
        "limit": "10"
      }
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
		"posts": {
      "type": "hasAndBelongsToMany",
      "model": "Post"
    }
	},
  "acls": [
		{
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
	],
  "methods": []
}
