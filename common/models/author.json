{
  "name": "Author",
  "base": "User",
  "strict": "throw",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "persistUndefinedAsNull": true,
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
			"required": true
    }
  },
  "validations": [],
  "relations": {
    "posts": {
      "type": "hasMany",
      "model": "Post",
      "foreignKey": "authorId"
    }
  },
  "acls": [
		{
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
	],
  "methods": []
}
